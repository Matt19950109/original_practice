<h1>Incomes#index</h1>

<h1>カテゴリ一覧</h1>
  <table class="table table-hover">
    <tbody>
      <% @incomes.each do |income| %>
        <tr>
          <td><%= link_to income.bank_account, income_path(income.id) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div>
  <%= link_to '使用している口座を登録する', new_income_path %>
  </div>

  <div>
  <%= link_to '支払を登録する', new_settlement_path %>
  </div>

  <div>
  <%= link_to '支出を登録', new_spending_path %>
  </div>

<%= link_to 'トップページに戻る', root_path %>

<%=@total.sum(:price)[Date.today.month]%>
<%= month_calendar events: @spendings do |date, spendings| %>
  <%= date.day %>

  <% array = [] %>
  <% spendings.each do |spending| %>
    <div>
      <%= link_to spending.price, spending_path(spending.id) %>
    </div>
    <div>
    <% array << spending.price %>
    </div>
  <% end %>
  <div>
  <%= array.sum %>
  </div>

<% end %>
<%= link_to '支出追加', new_spending_path %>

<ul>
  <% @this_month.each do |key, value| %>
    <li><%= "#{key}: #{value}" %></li>
  <% end %>
</ul>

